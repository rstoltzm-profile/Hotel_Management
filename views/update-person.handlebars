<html>
<h1>Update {{person.gid}}</h1>
<form id="update-person" action="/people" method="post">
    First name: <input type="text" name="first_name" value="{{person.first_name}}"><br>
    Last name: <input type="text" name="last_name" value="{{person.last_name}}"><br>
    phone_number: <input type="text" name="phone_number" value="{{person.phone_number}}"><br>
    customer_date: <input type="text" name="customer_date" value="{{person.customer_date}}"><br>
    last_stay: <input type="text" name="last_stay" value="{{person.last_stay}}"><br>
</form>
<button onclick="updatePerson({{person.gid}})">Update</button>
</html>
